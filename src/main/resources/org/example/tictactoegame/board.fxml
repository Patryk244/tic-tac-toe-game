<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.tictactoegame.GameController"
      stylesheets="@board.css"
      styleClass="root-box"
      spacing="20">

    <Label text="Tic Tac Toe" styleClass="label"/>

    <HBox alignment="CENTER" spacing="20">

        <VBox alignment="CENTER" spacing="10">
            <Label text="Player X" styleClass="label"/>
            <Label fx:id="scoreX" text="0" styleClass="score-label"/>
        </VBox>

        <GridPane fx:id="gameBoard" hgap="5" vgap="5" alignment="CENTER"/>

        <VBox alignment="CENTER" spacing="10">
            <Label text="Player O" styleClass="label"/>
            <Label fx:id="scoreO" text="0" styleClass="score-label"/>
        </VBox>
    </HBox>
</VBox>
